<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="@dimen/kappa_list_item_compact_min_height"
    android:layout_marginBottom="4dp"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="@dimen/kappa_list_item_padding">

    <TextView
        android:id="@+id/text_search_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingEnd="8dp"
        android:text="[ROOM]"
        android:textAppearance="@style/TextAppearance.Kappa.ListMeta"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/text_search_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="Result"
        android:textAppearance="@style/TextAppearance.Kappa.ListBody" />
</LinearLayout>
