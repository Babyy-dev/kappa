<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/kappa_list_item_margin_bottom"
    app:cardBackgroundColor="@color/kappa_teal_800"
    app:cardCornerRadius="16dp"
    app:cardElevation="4dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/kappa_list_item_min_height"
        android:padding="16dp">

        <TextView
            android:id="@+id/text_wallet_package_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Starter Pack"
            android:textAppearance="@style/TextAppearance.Kappa.ListTitle"
            app:layout_constraintEnd_toStartOf="@id/button_wallet_buy"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/text_wallet_package_coins"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="1000 coins"
            android:textAppearance="@style/TextAppearance.Kappa.ListMeta"
            android:textColor="@color/kappa_mint_100"
            app:layout_constraintEnd_toStartOf="@id/button_wallet_buy"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/text_wallet_package_name" />

        <TextView
            android:id="@+id/text_wallet_package_price"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="$2.99"
            android:textAppearance="@style/TextAppearance.Kappa.ListBody"
            android:textColor="@color/kappa_mint_100"
            app:layout_constraintEnd_toStartOf="@id/button_wallet_buy"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/text_wallet_package_coins" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_wallet_buy"
            style="@style/Widget.Kappa.Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Buy"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>
