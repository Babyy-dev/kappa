<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginEnd="8dp"
    android:orientation="vertical"
    android:padding="10dp">

    <TextView
        android:id="@+id/text_recipient_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="User"
        android:textAppearance="@style/TextAppearance.Kappa.ListTitle"
        android:textColor="@color/kappa_mint_100" />

    <TextView
        android:id="@+id/text_recipient_seat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:text="Seat 1"
        android:textAppearance="@style/TextAppearance.Kappa.ListMeta" />
</LinearLayout>
