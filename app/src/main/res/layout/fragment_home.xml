<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_screen_emerald"
    tools:context=".main.HomeFragment">

    <ImageView
        android:id="@+id/image_home_top_bg"
        android:layout_width="0dp"
        android:layout_height="@dimen/kappa_top_header_height"
        android:contentDescription="@null"
        android:scaleType="fitXY"
        android:src="@drawable/potalive_top_header"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:id="@+id/scroll_home"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:paddingStart="@dimen/kappa_scroll_padding_horizontal"
        android:paddingEnd="@dimen/kappa_scroll_padding_horizontal"
        android:paddingTop="@dimen/kappa_scroll_padding_top"
        android:paddingBottom="@dimen/kappa_scroll_padding_bottom_nav"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/kappa_header_tab_bar_height"
                android:layout_marginBottom="16dp"
                android:background="@drawable/potalive_header">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingStart="@dimen/kappa_header_tab_horizontal_padding"
                    android:paddingEnd="@dimen/kappa_header_tab_horizontal_padding"
                    android:paddingTop="@dimen/kappa_header_tab_top_padding"
                    android:paddingBottom="@dimen/kappa_header_tab_bottom_padding"
                    android:weightSum="3">

                    <TextView
                        android:id="@+id/tab_inbox_mensagem"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:gravity="center"
                        android:maxLines="1"
                        android:text="@string/home_tab_messages"
                        android:textAppearance="@style/TextAppearance.Kappa.HeaderTab"
                        android:textColor="@color/kappa_gold_300" />

                    <TextView
                        android:id="@+id/tab_inbox_amigos"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:gravity="center"
                        android:maxLines="1"
                        android:text="@string/home_tab_friends"
                        android:textAppearance="@style/TextAppearance.Kappa.HeaderTab"
                        android:textColor="@color/kappa_cream" />

                    <TextView
                        android:id="@+id/tab_inbox_familia"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:gravity="center"
                        android:maxLines="1"
                        android:text="@string/home_tab_family"
                        android:textAppearance="@style/TextAppearance.Kappa.HeaderTab"
                        android:textColor="@color/kappa_cream" />
                </LinearLayout>
            </FrameLayout>

            <LinearLayout
                android:id="@+id/section_inbox_mensagem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginBottom="16dp"
                    android:background="@drawable/bg_inbox_search"
                    android:gravity="center_vertical"
                    android:paddingStart="@dimen/kappa_scroll_padding_horizontal"
                    android:paddingEnd="@dimen/kappa_scroll_padding_horizontal">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_rooms"
                        android:tint="@color/kappa_mint_100" />

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/input_friends_search"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_weight="1"
                        android:background="@android:color/transparent"
                        android:hint="@string/home_search_friend_hint"
                        android:textColor="@color/kappa_mint_100"
                        android:textColorHint="@color/kappa_text_muted" />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:text="@string/home_section_messages"
                    android:textAppearance="@style/TextAppearance.Kappa.Section"
                    android:textColor="@color/kappa_gold_300" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycler_inbox_messages"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:overScrollMode="never"
                    tools:listitem="@layout/item_inbox_row" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/section_inbox_amigos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginBottom="16dp"
                    android:background="@drawable/bg_inbox_search"
                    android:gravity="center_vertical"
                    android:paddingStart="@dimen/kappa_scroll_padding_horizontal"
                    android:paddingEnd="@dimen/kappa_scroll_padding_horizontal">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_rooms"
                        android:tint="@color/kappa_mint_100" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:text="@string/home_search_friend_hint"
                        android:textAppearance="@style/TextAppearance.Kappa.Body"
                        android:textColor="@color/kappa_mint_100" />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:text="@string/home_tab_friends"
                    android:textAppearance="@style/TextAppearance.Kappa.Section"
                    android:textColor="@color/kappa_gold_300" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycler_inbox_friends"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:overScrollMode="never"
                    tools:listitem="@layout/item_inbox_row" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/section_inbox_familia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="22dp"
                    app:cardElevation="4dp"
                    app:cardBackgroundColor="@android:color/transparent"
                    app:strokeColor="@color/kappa_gold_500"
                    app:strokeWidth="1dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@drawable/bg_admin_panel_soft"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/home_family_card_title"
                            android:textAppearance="@style/TextAppearance.Kappa.Section"
                            android:textColor="@color/kappa_gold_300" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="6dp"
                            android:text="@string/home_family_home_page"
                            android:textAppearance="@style/TextAppearance.Kappa.Body"
                            android:textColor="@color/kappa_mint_100" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="@string/home_family_announcement"
                            android:textAppearance="@style/TextAppearance.Kappa.Body"
                            android:textColor="@color/kappa_mint_100" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:text="@string/home_family_room_section"
                    android:textAppearance="@style/TextAppearance.Kappa.Section"
                    android:textColor="@color/kappa_gold_300" />

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scrollbars="none">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="96dp"
                            android:layout_height="96dp"
                            android:layout_marginEnd="10dp"
                            app:cardCornerRadius="18dp"
                            app:cardElevation="4dp">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="centerCrop"
                                android:src="@drawable/bg_room_thumbnail" />
                        </com.google.android.material.card.MaterialCardView>

                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="96dp"
                            android:layout_height="96dp"
                            android:layout_marginEnd="10dp"
                            app:cardCornerRadius="18dp"
                            app:cardElevation="4dp">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="centerCrop"
                                android:src="@drawable/bg_room_thumbnail" />
                        </com.google.android.material.card.MaterialCardView>

                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="96dp"
                            android:layout_height="96dp"
                            app:cardCornerRadius="18dp"
                            app:cardElevation="4dp">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="centerCrop"
                                android:src="@drawable/bg_room_thumbnail" />
                        </com.google.android.material.card.MaterialCardView>
                    </LinearLayout>
                </HorizontalScrollView>

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    app:cardCornerRadius="18dp"
                    app:cardElevation="4dp"
                    app:cardBackgroundColor="@android:color/transparent"
                    app:strokeColor="@color/kappa_gold_500"
                    app:strokeWidth="1dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@drawable/bg_admin_panel_soft"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/home_family_manage"
                            android:textAppearance="@style/TextAppearance.Kappa.Section"
                            android:textColor="@color/kappa_gold_300" />

                        <TextView
                            android:id="@+id/text_family_current"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="@string/home_family_none"
                            android:textAppearance="@style/TextAppearance.Kappa.Body"
                            android:textColor="@color/kappa_mint_100" />

                        <TextView
                            android:id="@+id/text_family_code"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="@string/home_code_default"
                            android:textAppearance="@style/TextAppearance.Kappa.Body"
                            android:textColor="@color/kappa_text_muted" />

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:hint="@string/home_family_name_hint"
                            style="@style/Widget.Kappa.TextInput">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/input_family_name"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textColor="@color/kappa_cream"
                                android:textColorHint="@color/kappa_text_muted" />
                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:hint="@string/home_family_id_hint"
                            style="@style/Widget.Kappa.TextInput">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/input_family_id"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textColor="@color/kappa_cream"
                                android:textColorHint="@color/kappa_text_muted" />
                        </com.google.android.material.textfield.TextInputLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal">

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/button_family_create"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="8dp"
                                android:layout_weight="1"
                                android:text="@string/home_action_create"
                                style="@style/Widget.Kappa.Button.Glow" />

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/button_family_join"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="@string/home_action_join"
                                style="@style/Widget.Kappa.Button.Secondary" />
                        </LinearLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:hint="@string/home_family_room_name_hint"
                            style="@style/Widget.Kappa.TextInput">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/input_family_room_name"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textColor="@color/kappa_cream"
                                android:textColorHint="@color/kappa_text_muted" />
                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/button_family_room_create"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="@string/home_family_create_room"
                            style="@style/Widget.Kappa.Button.Glow" />

                        <TextView
                            android:id="@+id/text_family_status"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text=""
                            android:textAppearance="@style/TextAppearance.Kappa.Body"
                            android:textColor="@color/kappa_text_muted"
                            android:visibility="gone" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="@string/home_family_members"
                    android:textAppearance="@style/TextAppearance.Kappa.Section"
                    android:textColor="@color/kappa_gold_300" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycler_family_members"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:overScrollMode="never" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="@string/home_family_rooms"
                    android:textAppearance="@style/TextAppearance.Kappa.Section"
                    android:textColor="@color/kappa_gold_300" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycler_family_rooms"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:overScrollMode="never" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
