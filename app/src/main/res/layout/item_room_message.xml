<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/kappa_section_spacing_small"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_chat_bubble"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_message_user"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="User"
            android:textAppearance="@style/TextAppearance.Kappa.ListTitle" />

        <TextView
            android:id="@+id/text_message_body"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="Message"
            android:textAppearance="@style/TextAppearance.Kappa.ListBody"
            android:textColor="@color/kappa_mint_100" />
    </LinearLayout>
</LinearLayout>
