<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/kappa_list_item_margin_bottom"
    android:layout_marginHorizontal="0dp"
    app:cardCornerRadius="18dp"
    app:cardElevation="6dp"
    app:cardBackgroundColor="@android:color/transparent"
    app:strokeColor="@color/kappa_outline"
    app:strokeWidth="1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="132dp"
            android:background="@drawable/bg_room_banner">

            <TextView
                android:id="@+id/text_room_badge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                android:background="@drawable/bg_pill_live"
                android:text="LIVE"
                android:textAppearance="@style/TextAppearance.Kappa.ListBadge"
                android:textColor="@android:color/white" />

            <TextView
                android:id="@+id/text_room_country"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|end"
                android:layout_margin="12dp"
                android:background="@drawable/bg_pill_teal"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:text="Global"
                android:textAppearance="@style/TextAppearance.Kappa.ListBadge" />

            <TextView
                android:id="@+id/text_room_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|end"
                android:layout_margin="12dp"
                android:background="@drawable/bg_pill_gold"
                android:text="0 listening"
                android:textColor="@color/kappa_teal_950"
                android:textAppearance="@style/TextAppearance.Kappa.ListBadge" />
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_admin_panel_soft"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/text_room_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="Room Name"
                android:textAppearance="@style/TextAppearance.Kappa.ListTitle" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/image_room_agency_icon"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:contentDescription="@null"
                    android:src="@drawable/ic_profile" />

                <TextView
                    android:id="@+id/text_room_agency"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="Agency: -"
                    android:textAppearance="@style/TextAppearance.Kappa.ListBody"
                    android:textColor="@color/kappa_mint_100" />
            </LinearLayout>

            <TextView
                android:id="@+id/text_room_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="ID: -"
                android:textAppearance="@style/TextAppearance.Kappa.ListBody"
                android:textColor="@color/kappa_mint_100" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/text_room_mode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/bg_pill_teal"
                    android:text="FREE"
                    android:textAppearance="@style/TextAppearance.Kappa.ListBadge" />

                <TextView
                    android:id="@+id/text_room_lock"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_pill_teal"
                    android:text="Open"
                    android:textAppearance="@style/TextAppearance.Kappa.ListBadge" />
            </LinearLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_join_room"
                style="@style/Widget.Kappa.Button.Glow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Join Room" />

        </LinearLayout>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
