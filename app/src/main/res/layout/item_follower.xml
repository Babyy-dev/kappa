<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="@dimen/kappa_list_item_min_height"
    android:layout_marginBottom="@dimen/kappa_list_item_margin_bottom"
    android:background="@drawable/bg_room_row"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="@dimen/kappa_list_item_padding">

    <ImageView
        android:id="@+id/image_follower_avatar"
        android:layout_width="@dimen/kappa_list_avatar_size"
        android:layout_height="@dimen/kappa_list_avatar_size"
        android:background="@drawable/bg_avatar_ring"
        android:contentDescription="@null"
        android:padding="6dp"
        android:src="@drawable/ic_profile" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_follower_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="Follower"
            android:textAppearance="@style/TextAppearance.Kappa.ListTitle"
            android:textColor="@color/kappa_gold_300" />

        <TextView
            android:id="@+id/text_follower_meta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="ID"
            android:textAppearance="@style/TextAppearance.Kappa.ListBody"
            android:textColor="@color/kappa_mint_100" />
    </LinearLayout>

    <TextView
        android:id="@+id/text_follower_badge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:minWidth="44dp"
        android:background="@drawable/bg_pill_teal"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:text="VIP"
        android:textAppearance="@style/TextAppearance.Kappa.ListBadge" />

</LinearLayout>
