<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:layout_marginBottom="10dp"
    android:background="@drawable/bg_room_row"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="12dp">

    <ImageView
        android:id="@+id/image_follower_avatar"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:background="@drawable/bg_avatar_ring"
        android:contentDescription="@null"
        android:padding="6dp"
        android:src="@drawable/ic_profile" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_follower_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Follower"
            android:textAppearance="@style/TextAppearance.Kappa.Section"
            android:textColor="@color/kappa_gold_300" />

        <TextView
            android:id="@+id/text_follower_meta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="ID"
            android:textAppearance="@style/TextAppearance.Kappa.Body"
            android:textColor="@color/kappa_mint_100" />
    </LinearLayout>

    <TextView
        android:id="@+id/text_follower_badge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_pill_teal"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:text="VIP"
        android:textColor="@color/kappa_mint_100"
        android:textStyle="bold" />

</LinearLayout>
