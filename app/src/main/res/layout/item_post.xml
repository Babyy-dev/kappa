<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="18dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="@color/kappa_surface"
    app:strokeColor="@color/kappa_outline"
    app:strokeWidth="1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/image_post_media"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:scaleType="centerCrop"
            android:src="@drawable/bg_room_thumbnail" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:paddingTop="10dp">

            <ImageView
                android:id="@+id/image_post_avatar"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="@drawable/bg_avatar_ring"
                android:padding="4dp"
                android:src="@drawable/ic_profile" />

            <TextView
                android:id="@+id/text_post_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="User"
                android:textAppearance="@style/TextAppearance.Kappa.Section"
                android:textColor="@color/kappa_gold_300" />
        </LinearLayout>

        <TextView
            android:id="@+id/text_post_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:paddingTop="6dp"
            android:paddingBottom="12dp"
            android:text="Post content"
            android:textAppearance="@style/TextAppearance.Kappa.Body"
            android:textColor="@color/kappa_mint_100" />
    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
