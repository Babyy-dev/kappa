<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="@dimen/kappa_list_item_min_height"
    android:layout_marginBottom="@dimen/kappa_list_item_margin_bottom"
    android:background="@drawable/bg_inbox_row"
    android:baselineAligned="false"
    android:gravity="center_vertical"
    android:padding="@dimen/kappa_list_item_padding">

    <FrameLayout
        android:layout_width="@dimen/kappa_list_avatar_size"
        android:layout_height="@dimen/kappa_list_avatar_size">

        <ImageView
            android:id="@+id/image_inbox_avatar"
            android:layout_width="@dimen/kappa_list_avatar_size"
            android:layout_height="@dimen/kappa_list_avatar_size"
            android:background="@drawable/bg_avatar_ring"
            android:padding="6dp"
            android:src="@drawable/ic_profile" />

        <View
            android:id="@+id/view_inbox_status"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_gravity="bottom|end"
            android:layout_marginEnd="2dp"
            android:layout_marginBottom="2dp"
            android:background="@drawable/bg_status_online" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_inbox_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="User10"
                android:textAppearance="@style/TextAppearance.Kappa.ListTitle"
                android:textColor="@color/kappa_gold_300" />

            <TextView
                android:id="@+id/text_inbox_badge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:background="@drawable/bg_inbox_badge"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:text="VIP"
                android:textAppearance="@style/TextAppearance.Kappa.ListBadge" />
        </LinearLayout>

        <TextView
            android:id="@+id/text_inbox_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="Last message preview"
            android:textAppearance="@style/TextAppearance.Kappa.ListBody"
            android:textColor="@color/kappa_mint_100" />
    </LinearLayout>

    <FrameLayout
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_marginStart="8dp">

        <ImageView
            android:id="@+id/image_inbox_action"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_gravity="center"
            android:background="@drawable/bg_inbox_action"
            android:padding="8dp"
            android:src="@drawable/ic_inbox"
            android:tint="@color/kappa_gold_300" />

        <TextView
            android:id="@+id/text_inbox_unread"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="top|end"
            android:background="@drawable/bg_inbox_unread"
            android:gravity="center"
            android:text="1"
            android:textAppearance="@style/TextAppearance.Kappa.ListBadge"
            android:textColor="@color/kappa_cream"
            android:visibility="gone" />
    </FrameLayout>

</LinearLayout>
