<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_screen_emerald"
    android:padding="@dimen/kappa_screen_padding">

    <TextView
        android:id="@+id/text_wallet_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Wallet"
        android:textAppearance="@style/TextAppearance.Kappa.Headline"
        android:textColor="@color/kappa_gold_300"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/text_wallet_balance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/kappa_section_spacing_large"
        android:text="Balance: 0 coins"
        android:textAppearance="@style/TextAppearance.Kappa.Body"
        android:textColor="@color/kappa_mint_100"
        app:layout_constraintTop_toBottomOf="@id/text_wallet_title"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/text_wallet_status"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/kappa_section_spacing_small"
        android:text=""
        android:textAppearance="@style/TextAppearance.Kappa.Muted"
        android:textColor="@color/kappa_gold_300"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_wallet_balance" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_wallet_packages"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/kappa_section_spacing_large"
        android:clipToPadding="false"
        android:paddingBottom="@dimen/kappa_section_spacing_large"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_wallet_status" />
</androidx.constraintlayout.widget.ConstraintLayout>
